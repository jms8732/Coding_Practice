package programmers2;

//[2020 카카오공채] 외벽 점검
import java.util.*;

public class problem_15 {
	static int answer = -1;

	public static void main(String[] args) {
		int n = 12;
		int[] weak = { 1, 5, 6, 10 };
		int[] dist = { 1, 2, 3, 4 };

		int result = solution(n, weak, dist);
		System.out.println(result);
	}

	public static int solution(int n, int[] weak, int[] dist) {
		boolean [] visited = new boolean[n];

		for (int i = 1; i < 1 << dist.length; i++) {
			int memberCount = Integer.bitCount(i);
			simulation(0,memberCount,i,dist,n,weak,visited);
		}

		return answer;
	}

	private static void simulation(int depth, int k, int member, int[] dist, int n, int[] weak
			,boolean [] visited) {
		if (depth == k) {
			if (isRepaired(n,weak,visited)) {
				if (answer == -1)
					answer = depth;
				else
					answer = Math.min(answer, depth);
			}

			return;
		}

		boolean [] tmpVisited = new boolean[n];
		System.arraycopy(visited, 0, tmpVisited, 0, n);
		
		for (int i = 0; i < dist.length; i++) {
			if ((member & 1 << i) == 1 << i) {
				for (int j = 0; j < n; j++) {
					if (!visited[j]) {
						rightDirection(i, n, dist[i], weak,visited);
						member &= ~(1 << i);
						simulation(depth + 1, k, member, dist, n, weak,visited);
						member |= (1 << i);

					}

					System.arraycopy(tmpVisited, 0, visited, 0, n);
					
					if (!visited[j]) {
						reverseDirection(i, n, dist[i], weak,visited);
						member &= ~(1 << i);
						simulation(depth + 1, k, member, dist, n, weak,visited);
						member |= (1 << i);

					}
					

					System.arraycopy(tmpVisited, 0, visited, 0, n);
				}
			}
		}
	}

	private static void rightDirection(int anchor, int n, int dist, int[] weak,boolean [] visited) {
		for (int i = 0; i <= dist; i++) {
			int idx = Math.floorMod(anchor + i, n);
			visited[idx] = true;
		}
	}

	private static void reverseDirection(int anchor, int n, int dist, int[] weak, boolean [] visited) {
		for (int i = 0; i <= dist; i++) {
			int idx = Math.floorMod(anchor - i, n);
			visited[idx] = true;
		}
	}

	private static boolean isRepaired(int n,int [] weak, boolean [] visited) {
		for (int i = 0; i < weak.length; i++) {
			if (!visited[weak[i]-1])
				return false;
		}

		return true;
	}
}
