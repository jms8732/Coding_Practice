package combination;


//순열을 표현하는 test
import java.util.*;

public class test {
	static boolean[] visited;
	public static void main(String[] args) {
		int array[] = {1,2,3};
		visited = new boolean[array.length];
		int value[] = new int[array.length];
		int depth = 0;
		System.out.println("visited");
		for(int i =0 ; i< array.length ; i++) {
			if(!visited[i])
			{
				visited[i] = true;
				value[depth]= array[i];
				visitedDfs(array,value,depth+1);
				visited[i] =false;
			}
		}
		depth = 0 ;
		System.out.println("swap");
		swapDfs(array,0);
	}
	private static void swapDfs(int array[], int depth) {
		if(array.length == depth) {
			print(array);
			return; 
		}
		
		for(int i = depth ; i < array.length ; i++) {
			swap(depth,i,array);
			swapDfs(array,depth+1);
			swap(depth,i,array);
		}
	}
	
	
	private static void swap(int depth, int i , int array[]) {
		int tmp = array[depth];
		array[depth] = array[i];
		array[i] = tmp;
	}
	
	private static void visitedDfs(int [] array,int [] value, int depth) {
		if(array.length == depth) {
			print(value);
			return;
		}
		for(int i =0 ; i< array.length ; i++) {
			if(!visited[i])
			{
				visited[i] = true;
				value[depth] = array[i];
				visitedDfs(array,value,depth+1);
				visited[i] = false;
			}
		}
		
		return ;
	}
	private static void print(int [] array) {
		for(int i : array) {
			System.out.print(i + " ");
		}
		System.out.println();
	}
}
