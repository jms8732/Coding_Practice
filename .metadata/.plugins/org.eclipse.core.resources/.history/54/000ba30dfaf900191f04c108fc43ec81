package programmers;
//2020 KAKAO BLIND 문자열 압축
import java.util.*;
public class problem_17 {
	public static void main(String[] args) {
		int result = solution("aabbaccc");
		System.out.println(result);
	}
	public static int solution(String s) {
		int min = Integer.MAX_VALUE;
		HashMap<String, Integer> map = new HashMap<>(); 
		StringBuilder sb = null;
		for(int i = 1; i < s.length() /2 ; i++) {
			//윈도우의 크기
			sb = new StringBuilder(""); //압축되어 생성되는 문자열
			for(int j = 0; j < s.length() ; j+=i) {
				//윈도우의 크기 만큼 증가
				String sub = s.substring(j,j+1);
				Iterator key = map.keySet().iterator();
				if(key.hasNext()) {
					String tmp = key.next().toString();
					if(tmp.equals(sub))
					{ //동일 할 경우
						int value = map.get(tmp);
						value += 1;
						map.put(tmp, value);
					}
					else
					{
						//동일하지 않은 경우
						int value = map.get(tmp);
						if(value == 1)
							sb.append(tmp);
						else
							sb.append(value).append(tmp);
						map.remove(tmp); //해당 키 값 제거
						map.put(sub, 1); //다음 값 추가
					}
				}
				else
					map.put(sub, 1);
				
			}
			min = Math.min(min, sb.length());
		}

		return min;
	}
}
