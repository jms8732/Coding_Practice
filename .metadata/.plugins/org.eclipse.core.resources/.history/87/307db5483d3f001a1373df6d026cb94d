package programmers2;

//Äİ¶óÃ÷ ÃßÃø

public class problem_8 {
	public static void main(String[] args) {
		int n = 16;
		System.out.println(solution(n));
	}
	public static int solution(int num) {
		int round = 0;
		while(true) {
			if(num == 1)
			{
				break;
			}
			
			if(round == 500)
			{
				round = -1;
				break;
			}
			
			if(num % 2 == 0) {
				//Â¦¼öÀÌ¸é
				num /= 2;
			}else
				num = 3*num + 1;
			round++;
		}
		
		
		return round;
	}
}
