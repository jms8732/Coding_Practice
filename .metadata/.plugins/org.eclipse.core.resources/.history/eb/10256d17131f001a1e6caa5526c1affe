package combination;


//
import java.util.*;

public class test2 {
	public static void main(String[] args) {
		String[] s = {"abwerqwe","abcdef"};
		HashMap<Character,Integer> map = new HashMap<>();
		
		Set<Character> set = new HashSet<>();
		
		for(int i =0 ; i< s.length ; i++) {
			for(int j = 0 ; j< s[i].length() ; j++)
				set.add(s[i].charAt(j));
		}
		
		List<Character> list = new ArrayList<>(set);
		for(int i =0 ; i< list.size() ; i++) {
			map.put(list.get(i), i+1);
		}
		
		test1(s,map);
		test2(s,map);
	}
	private static void test2(String[] s, HashMap<Character,Integer> map) {
		long start = System.currentTimeMillis();
		int result = 0;
		
		for(int i =0 ; i< s.length ; i++) {
			String tmp = s[i];
			StringBuilder sb = new StringBuilder();
			for(int j =0 ; j< tmp.length() ; j++) {
				sb.append(map.get(tmp.charAt(j)));
			}
			result += Integer.parseInt(sb.toString());
		}
		
		long end = System.currentTimeMillis();
		System.out.println("StringBuilder : " + (end-start)/ 1000.0);
	}
	
	private static void test1(String[] s,HashMap<Character,Integer> map ) {
		long start = System.currentTimeMillis();
		int result = 0;
		for(int i =0 ; i< s.length ; i++) {
			String tmp = s[i];
			int expo = 1;
			for(int j = tmp.length()-1 ; j >=0 ; j--) {
				result += map.get(tmp.charAt(j)) * expo;
				expo *= 10;
			}
		}
		long end = System.currentTimeMillis();
		
		System.out.println("integer : " + (end-start)/1000.0);
	}
}
