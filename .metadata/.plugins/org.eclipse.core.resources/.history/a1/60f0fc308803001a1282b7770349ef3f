package programmers;

//구명 보트 정확성 75점
import java.util.*;
import java.util.stream.Collectors;

public class problem_32 {
	public static void main(String[] args) {
		int[] tmp = { 70, 50, 80, 50 };
		int limit = 100;
		int result = solution(tmp, limit);
		System.out.println(result);
	}

	public static int solution(int[] people, int limit) {
		int result = 0;
		Arrays.sort(people);
		HashMap<Integer,Integer> map =new HashMap<>();
		
		for(int i = (people.length - 1); i >=0 ; i--) {
			if(map.get(people[i]) == null)
				map.put(people[i], 1);
			else
			{
				int count = map.get(people[i]);
				map.put(people[i], count+1);
			}
		}
		
		Iterator it = map.keySet().iterator();
		int currentlimit = limit;
		while(it.hasNext()) {
			int key = (int)it.next();
			int count = (int)map.get(key);
			map.put(key, count-1);
			currentlimit -= key; //현재 보트에 남아있는 무게
			if(currentlimit >= 40) {
				//40kg 남았을 경우
				for(int i = currentlimit ; i >= 40 ; i--) {
					if(map.get(i) != null && map.get(i) !=0) {
						//현재 값이 있으며 그 값이 0이 아닌 경우
						int tCount = map.get(i);
						map.put(i, tCount-1);
						break;
					}
				}
			}
			result++;
			
		}
		return result;
	}
}
