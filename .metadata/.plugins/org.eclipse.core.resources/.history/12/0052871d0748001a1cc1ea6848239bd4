package samsung;

//사다리 조작
import java.util.*;
import java.io.*;

public class problem_15684 {
	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		StringTokenizer st = new StringTokenizer(br.readLine());

		int N = Integer.parseInt(st.nextToken());
		int M = Integer.parseInt(st.nextToken());
		int H = Integer.parseInt(st.nextToken());

		List<List<Integer>> map[][] = new ArrayList[M][N];
		for (int i = 0; i < M; i++) {
			for (int j = 0; j < N; j++) {
				map[i][j] = new ArrayList<>();
			}
		}

		for (int i = 0; i < M; i++) {
			st = new StringTokenizer(br.readLine());

			int row1 = Integer.parseInt(st.nextToken()) - 1;
			int col1 = Integer.parseInt(st.nextToken()) - 1;
			int col2 = col1 + 1;

			List<Integer> tmp = new ArrayList<>();
			tmp.add(col1);
			tmp.add(col2);

			map[row1][col1].add(tmp);

			tmp.clear();
			tmp.add(col2);
			tmp.add(col1);
			map[row1][col2].add(tmp);
		}
		int depth = 0;
		for (int i = 1; i <= 3; i++) {
			dfs(depth, i, map);
		}
		System.out.println(-1);
	}

	private static void dfs(int depth, int size, List<List<Integer>>[][] map) {
		if (depth == size) {
			if(go_down(map)) {
				//찾은 경우
				System.out.println(depth);
				System.exit(0);
			}
		}

		for (int i = 0; i < map.length; i++) {
			for (int j = 0; j < map[i].length; j++) {
				if (j + 1 >= map[i].length)
					continue;

				if (map[i][j].isEmpty() && map[i][j + 1].isEmpty()) {
					// 둘다 비었을 경우
					List<Integer> tmp = new ArrayList<>();
					tmp.add(j);
					tmp.add(j + 1);

					map[i][j].add(tmp);

					tmp.clear();
					tmp.add(j + 1);
					tmp.add(j);
					map[i][j + 1].add(tmp);

					dfs(depth + 1, size, map);

					map[i][j].clear();
					map[i][j + 1].clear();

				}
			}
		}
	}

	private static boolean go_down(List<List<Integer>>[][] map) {
		int row = 0;
		boolean answer= true;
		for (int i = 0; i < map[0].length; i++) {
			int col = i;
			while (row < map.length) {
				if(!map[row][col].isEmpty()){
					col = map[row][col].get(0).get(1);
				}
				row++;
			}
			
			if(col != i) //내려왔는데 i != i 인경우
				return !answer;
		}
		
		return answer;
	}
}
