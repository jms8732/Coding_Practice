package greedy;

//전구와 스위치
import java.util.*;
import java.io.*;

public class problem_2138 {
	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		int N = Integer.parseInt(br.readLine());

		String A = br.readLine();
		String B = br.readLine();
		compare(A, B);
	}
	private static void compare(String A ,String B) {
		for(int i =0 ; i< A.length() / 2 ; i++) {
			int count = 0;
			StringBuilder sb = new StringBuilder(A);
			for(int j = i ; j < A.length() ; j++) {
				make(sb,j);
				count++;
				if(B.equals(sb.toString()) || B.equals(sb.reverse().toString())) {
					System.out.println(count);
					System.exit(0);
				}
			}
		}
		
		System.out.println(-1);
	}
	
	private static void make(StringBuilder sb, int idx) {
		for(int i = -1 ; i <= 1 ; i++) {
			if(idx + i < 0 || idx + i >= sb.length()) {
				continue;
			}
			int tmpI = idx+i;
			if(sb.charAt(tmpI) == '0') {
				sb.deleteCharAt(tmpI);
				sb.insert(tmpI, '1');
			}else {
				sb.deleteCharAt(tmpI);
				sb.insert(tmpI, '0');
			}
		}
	}
}
