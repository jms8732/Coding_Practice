package greedy;

//전구와 스위치
import java.util.*;
import java.io.*;

public class problem_2138 {
	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		int N = Integer.parseInt(br.readLine());

		String A = br.readLine();
		String B = br.readLine();
		compare(A, B);
	}

	private static void compare(String A, String B) {
		StringBuilder sb = null;
		int count = Integer.MAX_VALUE;
		int max = (int)Math.nextUp(A.length()/2);
		for (int i = 0; i < max ; i++) {
			int tmpCount = 0;
			sb = new StringBuilder(A);
			for (int j = i; j < A.length(); j++) {
				make(sb, j);
				tmpCount++;
				if (B.equals(sb.reverse().toString()) || B.equals(sb.reverse().toString())) {
					count = Math.min(count, tmpCount);
				}
			}
		}
		if (count != Integer.MAX_VALUE)
			System.out.println(count);
		else
			System.out.println(-1);
	}

	private static void make(StringBuilder sb, int idx) {
		for (int i = -1; i <= 1; i++) {
			if (idx + i < 0 || idx + i >= sb.length()) {
				continue;
			}
			int tmpI = idx + i;
			if (sb.charAt(tmpI) == '0') {
				sb.deleteCharAt(tmpI);
				sb.insert(tmpI, '1');
			} else {
				sb.deleteCharAt(tmpI);
				sb.insert(tmpI, '0');
			}
		}
	}
}
