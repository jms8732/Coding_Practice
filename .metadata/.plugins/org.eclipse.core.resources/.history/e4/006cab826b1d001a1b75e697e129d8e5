package combination;

import java.util.*;
import java.io.*;

public class problem_14505 {
	static int len;
	static String s;

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		s = scanner.nextLine(); // 문자열 입력 받음
		len = s.length();
		int count = 0;
		for (int i = 1; i < (1 << len); i++) {
			/*
			 * 길이를 비트로 바꿔서 진행한다. 예를 들어, 길이가 3인 경우 111이니 총 경우가 8가지가 발생한다.
			 */

			if (isPalindrome(i))
				count++;
		}

		System.out.println(count);

	}

	private static boolean isPalindrome(int current) {
		StringBuilder sb = new StringBuilder(); // 부분 조합을 저장하기 위한 변수
		for (int i = 0; i < len; i++) {
			if ((current & (1 << i)) == (1 << i)) {
				sb.append(s.charAt(i)); // 입력
			}
		}
		String original = sb.toString();
		StringBuilder reverse = sb.reverse();
		if (original.equals(reverse.toString())) {
			// 팰린드롬은 앞 뒤가 동일하기 때문에
			return true;
		}

		return false;

	}
}
