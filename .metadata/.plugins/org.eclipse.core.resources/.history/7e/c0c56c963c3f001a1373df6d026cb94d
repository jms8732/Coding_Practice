package programmers2;

//Äİ¶óÃ÷ ÃßÃø

public class problem_8 {
	public int solution(int num) {
		int round = 1;
		while(num == 1) {
			if(round == 500)
			{
				round = -1;
				break;
			}
			
			if(num % 2 == 0) {
				//Â¦¼öÀÌ¸é
				num /= 2;
			}else
				num = 3*num + 1;
			round++;
		}
		
		
		return round;
	}
}
