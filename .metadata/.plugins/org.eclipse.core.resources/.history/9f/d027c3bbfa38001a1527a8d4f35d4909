package programmers1;

//시저 암호
public class problem_46 {
	public String solution(String s ,int n) {
		StringBuilder sb =new StringBuilder();
		for(int i =0 ; i< s.length() ; i++) {
			int c = 0;
			if(s.charAt(i) != ' ')
				c = (s.charAt(i) + n) % 26;
			else
				c = s.charAt(i);
			sb.append((char)c); //형변환
		}
		
		return sb.toString();
	}
}
