package programmers;

import java.lang.reflect.Array;
import java.util.Arrays;
import java.util.Comparator;

//가장 먼 노드

public class problem_51 {
	static int count = 0;
	static int big = 0;

	public static void main(String[] args) {
		int[][] edge = { { 3, 6 }, { 4, 3 }, { 3, 2 }, { 1, 3 }, { 1, 2 }, { 2, 4 }, { 5, 2 } };
		int result = solution(6, edge);
		System.out.println(result);
	}

	public static int solution(int n, int[][] edge) {
		int[] circle = new int[n+1];
		int[] countTmp = new int[n+1];
		for (int i = 0; i < circle.length; i++) {
			circle[i] = i;
		}
		Arrays.sort(edge, new Comparator<int[]>() {
			@Override
			public int compare(int[] arg0, int[] arg1) {
				// TODO Auto-generated method stub
				if (arg0[0] < arg1[0]) // x좌표를 대상으로 오름차순 정렬
					return -1;
				else
					return 1;
			}

		});
		for (int i = 0; i < edge.length; i++) {
			int x = edge[i][0] ;
			int y = edge[i][1] ;
			
			int parent1 = find(circle,x);
			int parent2 = find(circle,y);
			
			if(parent1 == parent2)
				continue;
			count =0;
			if(parent1 < parent2) {
				circle[parent2] = find(circle,x);
				countTmp[parent2] = count;
			}else {
				circle[parent1] = find(circle,y);
				countTmp[parent1] = count;
			}
			big = Math.max(big, count);
		}

		int answer = 0;
		for (int i = 1; i < countTmp.length; i++)
			if (big == countTmp[i])
				answer++;

		return answer;

	}

	public static int find(int[] parent, int idx) {
		count++;
		if (parent[idx] == idx)
			return parent[idx];
		else {
			return find(parent, parent[idx]);
		}
	}

}
