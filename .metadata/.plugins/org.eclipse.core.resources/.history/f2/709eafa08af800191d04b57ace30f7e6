package programmers;
//큰수 만들기

public class problem_13 {
	public static void main(String[] args) {
		String result = solution("1924",2);
		System.out.println(result);
	}
	public static String solution(String number, int k) {
		int big =0 ;
		for(int i =0 ; i <number.length() ; i++) {
			String previous = number.substring(i,i+1);
			int tmp = dfs(number, previous,k,i+1);
			big = Math.max(tmp, big);
		}
		
		return Integer.toString(big);
    }
	public static int dfs(String number, String previous, int k , int idx) {
		int big = 0;
		if(previous.length() == k) { //원하는 개수 만큼 도달 했을 경우
			int tmp = Integer.parseInt(previous);
			big = Math.max(big, tmp); //값 비교
			return big;
		}
		for(int i = idx ; i< number.length() ; i++) {
			String next = number.substring(i,i+1);
			StringBuilder sb = new StringBuilder(previous);
			sb = sb.append(next); //결합 
			int tmp = dfs(number,sb.toString(),k,i+1);
			big = Math.max(tmp, big); //큰값 비교
			sb = sb.deleteCharAt(sb.length()-1); //현재 위치의 마지막 값 제거
			previous = sb.toString();
		}
		return big;
	}
}
