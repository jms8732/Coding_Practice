package programmers1;

//방문 길이
import java.util.*;

public class problem_20 {
	public static void main(String[] args) {
		String s = "LULLLLLLU";
		int result = solution(s);
		System.out.println(result);
	}

	public static int solution(String dirs) {
		boolean[][] visited = new boolean[9][9];
		int x = 4, y = 4;
		int count = 0;
		for (int i = 0; i < dirs.length(); i++) {
			int nx = x;
			int ny = y;
			if (!visited[x][y]) {
				count++;
				visited[x][y] = true;
			}

			switch (dirs.charAt(i)) {
			case 'U':
				nx -= 1;
				break;
			case 'L':
				ny -= 1;
				break;
			case 'R':
				ny += 1;
				break;
			case 'D':
				nx += 1;
				break;
			}

			if (nx < 0 || nx >= visited.length || ny < 0 || ny >= visited[x].length)
				continue;
			x = nx;
			y = ny;
		}
		if(!visited[x][y]) {
			count++;
			visited[x][y] = true;
		}

		return count;
	}
}
