package programmers1;
//등굣길

import java.util.Arrays;

public class problem_7 {
	public static void main(String[] args) {
		int [][] tmp = {{3,3},{4,4}};
		int result = solution(5,5,tmp);
		System.out.println(result);
	}

	public static int solution(int m, int n, int[][] puddles) {
		int [][] map = new int[m][n];
		
		for(int i =0 ; i < puddles.length ; i++) {
			int x = puddles[i][0]-1;
			int y = puddles[i][1]-1;
			
			map[x][y] = -2; //물 웅덩이 표시
		}
		
		Arrays.fill(map[0], 1);
		for(int i = 0;  i< map.length ; i++) {
			map[i][0] = 1;
		}
		
		for(int i = 1; i < map.length ; i++) {
			for(int j = 1; j < map[i].length ; j++) {
				int left =0 , up =0 ;
				if(map[i][j] == -2) //우물이 존재 할 경우
					continue;
				if(map[i-1][j] == -2)
				{
					//좌측에 우물이 있는 경우
					up = map[i][j-1];
				}else if(map[i][j-1] == -2) {
					//위에 우물이 았는 경우
					left = map[i-1][j];
				}else
				{
					left = map[i-1][j];
					up = map[i][j-1];
				}
				map[i][j] = up+left;
			}
		}
		
		return map[m-1][n-1];
	}
}
