package programmers;

//무지의 먹방 라이브 16.5점

import java.util.*;

public class problem_39 {
	public static void main(String[] args) {
		int [] food_times = {3,1,3};
		int k = 8;
		int result = solution(food_times,k);
		System.out.println(result);
	}

	public static int solution(int[] food_times, long k) {
		long q = k / food_times.length; //몫
		long r = k % food_times.length; //나머지
		
		HashMap<Integer,Integer> map = new HashMap<>(); //기록
		
		for(int i =0 ; i< food_times.length ; i++) {
			int remain = food_times[i] - (int)q; //남은 개수
			if(remain > 0)
				map.put(i+1,remain); //0보다 클 경우만 map 추가
			
		}
		
		for(int i =0 ; i< r ; i++) {
			int idx = (i+1) % map.size();
			int count = map.get(idx)-1;
			if(count > 0)
				map.put(idx, count);
			else
				map.remove(idx);
		}
		
	}
}
