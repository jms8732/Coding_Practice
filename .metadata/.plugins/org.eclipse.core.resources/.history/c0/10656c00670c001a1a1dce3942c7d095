package programmers;

import java.util.Arrays;
import java.util.Comparator;

//가장 먼 노드

public class problem_51 {

	public static void main(String[] args) {
		int[][] edge = { { 3, 6 }, { 4, 3 }, { 3, 2 }, { 1, 3 }, { 1, 2 }, { 2, 4 }, { 5, 2 } };
		int result = solution(6, edge);
		System.out.println(result);
	}

	public static int solution(int n, int[][] edge) {
		int[] circle = new int[n+1];
		int[] countTmp = new int[n+1];
		for (int i = 0; i < circle.length; i++) {
			circle[i] = i;
		}
		Arrays.sort(edge, new Comparator<int[]>() {
			@Override
			public int compare(int[] arg0, int[] arg1) {
				// TODO Auto-generated method stub
				if (arg0[0] < arg1[0]) // x좌표를 대상으로 오름차순 정렬
					return -1;
				else
					return 1;
			}

		});
		for (int i = 0; i < edge.length; i++) {
			int x = edge[i][0] ;
			int y = edge[i][1] ;
			
			int parent1 = find(circle,x);
			int parent2 = find(circle,y);
			
			if(parent1 == parent2)
				continue;
			if(parent1 < parent2) {
				circle[y] = x;
			}else {
				circle[x] = y;
			}
		}
		

		int answer = 0;
		int big =0;
		for (int i = 2; i < countTmp.length; i++) {
			countTmp[i] =  count(circle,i,0);
			big = Math.max(big,countTmp[i]);
		}

		for(int i =0 ; i < countTmp.length; i++) {
			if(big == countTmp[i])
				answer++;
		}
		return answer;

	}
	public static int count(int [] circle, int idx, int count) {
		if(circle[idx] == idx)
			return count;
		else {
			return count(circle,circle[idx],count+1);
		}
	}
	public static int find(int[] parent, int idx) {
		if (parent[idx] == idx)
			return parent[idx];
		else {
			return find(parent, parent[idx]);
		}
	}

}
