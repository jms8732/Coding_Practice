package programmers1;
//가장 긴 팰린드롬 25점

import java.util.*;

public class problem_12 {
	public static void main(String[] args) {
		int result = solution("aaa");
		System.out.println(result);
	}

	public static int solution(String s) {
		StringBuilder reverse = new StringBuilder(s);
		reverse = reverse.reverse(); // 뒤집음
		
		int answer = 0;
		for (int j = 3; j <= reverse.length(); j++) {
			for (int i = 0; i < reverse.length()-1 - j; i++) {
				if(i+j >= reverse.length())
					continue;
				StringBuilder sb = new StringBuilder(reverse.substring(i, i+j));
				if(s.contains(sb.toString())) {
					answer = Math.max(answer, j); //길이 저장
				}
			}
		}
		
		return answer;
	}
}
