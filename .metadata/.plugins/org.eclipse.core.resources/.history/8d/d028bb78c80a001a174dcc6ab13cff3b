package programmers;

//단속 카메라
import java.util.*;

public class problem_47 {
	public static void main(String[] args) {
		int [][] tmp = {{-20,15},{-14,-5},{-18,-13},{-5,-3}};
		int result = solution(tmp);
		System.out.println(result);
	}

	public static int solution(int[][] routes) {
		int answer = 1;
		
		List<Node> list = new ArrayList<>();
		for(int i =0 ; i <routes.length ; i++) {
			list.add(new Node(routes[i][0],routes[i][1]));
		}
		list.sort(new Comparator<Node>() {

			@Override
			public int compare(Node o1, Node o2) { //시작 지점을 대상으로 오름차순 정렬
				// TODO Auto-generated method stub
				if(o1.start < o2.start)
					return -1;
				else if(o1.start == o2.start) {
					if(o1.end < o2.end)
						return -1;
					else
						return 1;
				}else
					return 1;
			}
			
		});

		for(int i =0 ; i< list.size() ;i++) {
			int next = i+1;
			if(next >= list.size())
				break;
			
			Node range = list.get(i);
			Node target = list.get(next);
			if(!(range.start <= target.start) && !(target.start <= range.end))
				answer++; //범위 내 없을 경우
		}
		return answer;
	}

	private static class Node {
		int start, end;

		public Node(int s, int e) {
			this.start = s;
			this.end = e;
		}
	}
}
